  - var parentValue = hTitle
  - var drones = drones
  - var children = [childrenArt,childrenHead,childrenLabel]
  - var labelValue = labelText
  - var countries = countries
  - var tp = typeD
  - var radio = rad
  - var chars = [charArt, charHead]
  - var charsHeadValue = techChars
  - var props = [propsArt, propsHead, propsPar]
  - var namesValues = namesVal
  - var propNames = propN
  - var propValues = propVal
    article(class="span-20 row " + parent[0])
      header(class="span-20 " + parent[1])
        h1= parentValue
      - for (var i = 0; i <= drones.length - 1; i++)
        input(type='checkbox' name=tp class= radio + "checks" id=radio + (i+1))
        article(class="span-20 " + children[0] + (i + 1))
          header(class= "span-20 " + children[1])
            - if (i === 0)
              div(class= "span-1 offset-1 " + countries[0] + '-icon country-icons')
                +icon(country[0], country[0], ['span-20', 'span-20'], country[0])
            - else if (i === 1)
              div(class= "span-1 offset-1 " + countries[1] + '-icon country-icons')
                +icon(country[1], country[1], ['span-20', 'span-20'], country[1])
            - else if (i === 2)
              div(class= "span-1 offset-1 " + countries[2] + '-icon country-icons')
                +icon(country[2], country[2], ['span-20', 'span-20'], country[2])
            h2.drone-name.span-8= drones[i]
            input(type="button" class= radio + "hide" id= radio + "more-"+(i + 1))
