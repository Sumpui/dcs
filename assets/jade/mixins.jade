            input(type="button" id = radio + 'close-' + (i+1) class= radio + 'cls')
            label(for= radio + 'close-' + (i + 1)  class= radio + "close-buttons span-4") ⨯
          article(class="span-14 offset-3 " + chars[0])
            header(class="span-20 " + chars[1])
              h2= charsHeadValue
            .chars-group.span-16.offset-2
              - for (var k = 0; k <= namesValues.length - 1; k++)
                article(class= "span-20 " + props[0] + " " + propNames[k] + '-' + (i + 1))
                  header(class= "span-12 " + props[1])
                    h3= namesValues[k]
                  p(class= "span-8 " + props[2])= propValues[i][k]

mixin table(col, str, tc, heads)
  table(class=tc[0]+"-table span-20" cellpadding="5")
    tbody.span-20
      - for(var i = 0; i < str; i++)
        - if (i === 1)
          tr.span-20.coords-headers
            - for (var j = 0; j < col; j++)
              - if (i === 0)
                td(class=tc[j+1]+' span-10 not-choosen') Не выбрано
              - else
                td(class=tc[j + 1] + '-headers span-10')= heads[j]
        - else
          tr.span-20.coords
            - for (var j = 0; j < col; j++)
              - if (i === 0)
                td(class=tc[j+1]+' span-10 not-choosen') Не выбрано
              - else
                td(class=tc[j + 1] + '-headers span-10')= heads[j]