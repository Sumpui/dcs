mixin icon(main, name, span, tt)
  p(class=main+"-icons "+span[0] onselectstart="return false;" title=tt)
    svg(class=name+'-icon svg-blocks '+span[1])
      use(class=name+'-in-use' xlink:href='#'+name)


mixin buildDrones(parentArt, parentHead, hTitle, drones, childrenArt, childrenHead, childrenLabel, labelText, countries, typeD, rad, charArt, charHead, techChars, propsArt, propsHead, propsPar, namesVal, propN, propVal)
