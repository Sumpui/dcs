html(lang="en")
  head
    meta(charset="UTF-8")
    title Document
    link(rel="stylesheet", href="css/main.css")
  body(onselectstart="return false;")
    include ./icons/sprite/svg/symbols.svg
    #container
      #dynamic-map.span-20
      #staticclear-map.span-20
      canvas#polygon.span-20
      #controls.span-20
